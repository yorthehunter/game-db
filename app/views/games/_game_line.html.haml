%tr
  %td= game.purchase_date
  %td= link_to_if action_name == "index", game.game_name, game_path(game)
  %td= game.system
  %td= game.purchase_price
  %td= game.includes
  %td= game.game_alt_name
  %td.actions
    = link_to 'Edit',   '#', class: "btn btn-xs", data: { toggle: "modal", target: "#edit-modal", remote: edit_game_path(game) }
    = link_to 'Delete', game_path(game),
      method: :delete,
      data: { confirm: 'Are you sure?' },
      class: "btn btn-xs btn-danger"
