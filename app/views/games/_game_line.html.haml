%tr
  %td= game.purchase_date
  %td= link_to game.game_name, '#', data: { toggle: "modal", target: "#edit-modal", remote: game_path(game) }
  %td= game.system
  - unless action_name == "readonly"
    %td= !game.purchase_price.blank? ? number_to_currency(game.purchase_price) : "--"
  %td= game.includes
  %td= game.game_alt_name
  %td.actions
    - unless action_name == "readonly"
      = link_to 'Edit',   '#', class: "btn btn-xs", data: { toggle: "modal", target: "#edit-modal", remote: edit_game_path(game) }
      = link_to 'Delete', game_path(game),
        method: :delete,
        data: { confirm: 'Are you sure?' },
        class: "btn btn-xs btn-danger"
