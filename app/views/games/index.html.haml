.container
  %header
    %h1.h1 All Games

  .m1= link_to "+ New game", '#', class: "btn btn-sm", data: { toggle: "modal", target: "#edit-modal", remote: new_game_path }

  %table.table-standard
    %thead
      %tr
        %th= sortable "purchase_date"
        %th= sortable "game_name"
        %th= sortable "system"
        %th Purchase Price
        %th Includes
        %th Alternate Name
        %th Actions
    %tbody
      - @games.each do |game|
        = render "game_line", game: game

  .m1= link_to "+ New game", '#', class: "btn btn-sm", data: { toggle: "modal", target: "#edit-modal", remote: new_game_path }

#edit-modal.modal.fade
  .modal-dialog.modal-lg
    .modal-content.p1
      .loading-spinner.f-xl
        %span.fa.fa-spinner
